.music {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.poster {
  width: 500rpx;
  height: 500rpx;
  border-radius: 50%;
  overflow: hidden;
}

.musicControl {
  width: 100rpx;
  height: 100rpx;
  position: relative;
  bottom: 300rpx;
  left: 200rpx;
}

.background {
  width: 100%;
  height: 100%;
}

.tags {
  width: 50rpx;
  height: 130rpx;
  position:absolute;
  left: 30rpx;
  top:500rpx;
}

.words {
  position: relative;
  top:100rpx;
  width: 500rpx;
  font-size: 18px;
}

.button {
  background-color: #f7f7f7;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  width: 600rpx;
  height: 60rpx;
  position: absolute;
  bottom: 20px;
  margin-left: 80rpx;
  border-radius: 5rpx;
}
